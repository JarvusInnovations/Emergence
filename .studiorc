#!/bin/bash

echo "    * Use 'npm-install' to set up node_modules/"
npm-install() {
    echo "    Installing dependencies"
    hab pkg install -b core/node6 core/git core/python2 core/gcc

    echo "    Fixing interpretter in node-gyp"
    sed -e "s#\#\!.*bin/env#\#\!/hab/pkgs/core/coreutils/8.25/20170513213226/bin/env#" -i "$(hab pkg path core/node6)/lib/node_modules/npm/bin/node-gyp-bin/node-gyp"

    echo "    Running: npm install"
    pushd /src > /dev/null
    npm install
    popd > /dev/null
}


echo